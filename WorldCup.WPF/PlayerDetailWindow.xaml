<Window x:Class="WorldCup.WPF.PlayerDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorldCup.WPF"
        mc:Ignorable="d"
        Title="PlayerDetailWindow" Height="350" Width="200">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="txtTitle" FontSize="20" FontWeight="Bold" TextAlignment="Center" Grid.Row="0" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center">
            <Image x:Name="imgPlayer" Width="100" Height="100" Margin="0,0,0,10"/>
            <TextBlock x:Name="txtNumber" FontSize="14"/>
            <TextBlock x:Name="txtPosition" FontSize="14"/>
            <TextBlock x:Name="txtCaptain" FontSize="14"/>
            <TextBlock x:Name="txtGoals" FontSize="14"/>
            <TextBlock x:Name="txtCards" FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>
