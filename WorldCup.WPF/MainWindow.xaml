<Window x:Class="WorldCup.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorldCup.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Margin="20">

            <TextBlock Text="Select Championship:" FontWeight="Bold" Margin="0,0,0,5"/>
        <RadioButton x:Name="rbMen" Content="Men" IsChecked="True"/>
        <RadioButton x:Name="rbWomen" Content="Women" Margin="0,0,0,10"/>

        <TextBlock Text="Select Language:" FontWeight="Bold" Margin="0,10,0,5"/>
        <RadioButton x:Name="rbCroatian" Content="Hrvatski" IsChecked="True"/>
        <RadioButton x:Name="rbEnglish" Content="English" Margin="0,0,0,10"/>

        <TextBlock Text="Window Size:" FontWeight="Bold" Margin="0,10,0,5"/>
        <ComboBox x:Name="cbResolution" SelectedIndex="0">
            <ComboBoxItem Content="800x600"/>
            <ComboBoxItem Content="1024x768"/>
            <ComboBoxItem Content="Fullscreen"/>
        </ComboBox>

        <Button x:Name="btnContinue" Content="Continue" Margin="0,20,0,0" Width="100" HorizontalAlignment="Center" Click="btnContinue_Click"/>

        </StackPanel>

    </Grid>
</Window>
